{
  "name": "monorepo",
  "private": true,
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "front",
    "api"
  ],
  "scripts": {
    "start:front": "npm run start --workspace=front",
    "start:api": "npm run start:dev --workspace=api",
    "build:front": "npm run build --workspace=front",
    "build:api": "npm run build --workspace=api",

    "lint:front": "npm run lint --workspace=front",
    "lint:api": "npm run lint --workspace=api",
    "lint:all": "npm run lint --workspace=api -- --fix && npm run lint --workspace=front -- --fix",

    "test:api:rib": "npm run test --workspace=api -- --runInBand",
    "test:front:ci": "npm run test --workspace=front -- --watch=false",
    "test:all": "npm run test:api:rib && npm run test:front:ci"

  },
  "devDependencies": {
    "@angular-eslint/builder": "^20.4.0",
    "@angular-eslint/eslint-plugin": "^20.4.0",
    "@angular-eslint/eslint-plugin-template": "^20.4.0",
    "@angular-eslint/schematics": "^20.4.0",
    "@angular-eslint/template-parser": "^20.4.0",
    "@angular-eslint/utils": "^20.4.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@typescript-eslint/utils": "^8.46.1",
    "eslint": "^9.37.0",
    "eslint-plugin-n": "^17.23.1",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
